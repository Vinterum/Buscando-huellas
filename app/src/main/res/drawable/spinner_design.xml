<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item><shape>
            <gradient android:angle="90" android:endColor="@color/k_background" android:startColor="@color/k_background" android:type="linear" />

            <stroke android:width="1dp" android:color="@color/k_background" />

            <corners android:radius="4dp" />

            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
        </shape></item>
        <item android:bottom="0dp"
            android:left="-4dp"
            android:right="-4dp"
            android:top="-5dp">
            <shape android:shape="rectangle" >
                <stroke
                    android:width="1dp"
                    android:color="@android:color/darker_gray" />
            </shape>
        </item>
        <item android:drawable="@drawable/drop_down" android:gravity="right|center"/>
    </layer-list></item>

</selector>