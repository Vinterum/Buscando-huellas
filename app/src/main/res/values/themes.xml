<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BuscandoHuellas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/hint</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="android:colorControlHighlight">@color/k_blue</item>
        <item name="colorSurface">@color/k_background</item>
    </style>

    <style name="SplashTheme" parent="Theme.BuscandoHuellas">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>